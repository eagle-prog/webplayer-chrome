{
    "name": "WebPlayer",
    "version": "1.0.0",
    "description": "Give you extra controls for video play on Netflix.",
    "manifest_version": 2,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": "images/icon-48.png",
        "default_title": "WebPlayer"
    },
    "background": {
        "scripts": [
            "js/global.js",
            "js/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.netflix.com/*"
            ],
            "js": [
                "vendors/jquery/jquery.min.js",
                "js/config.js",
                "js/global.js",
                "js/utils.js",
                "js/content.js",
                "js/controls.js"
            ],
            "css": [
                "css/style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage",
        "tabs",
        "https://www.netflix.com/*"
    ],
    "web_accessible_resources": [
		"images/*.*",
		"html/*.*",
		"vendors/*.*"
    ]
}
  